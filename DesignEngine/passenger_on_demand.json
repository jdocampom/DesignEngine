
{
    "view": {
        "id": "search_passenger",
        "header": {
            "rows": [
                {
                    "id": 1,
                    "fields": [
                        {
                            "id": "PNR_id",
                            "label": "PNR",
                            "mandatory": true,
                            "contents": {
                                "type": "TextInput",
                                "placeholder": "Please enter a PNR i.e P3DG45",
                                "text": ""
                            }
                        }
                    ]
                },
                {
                    "id": 2,
                    "fields": [
                        {
                            "id": "suername_id",
                            "label": "Surname",
                            "width":"100%",
                            "contents": {
                                "type": "TextInput",
                                "placeholder": "Please enter a surname",
                                "text": ""
                            }
                        }
                    ]
                }
            ]
        },
        "details": {
            
        },
        "footer": {
            "rows": [
                {
                    "id": 1,
                    "fields": [
                        {
                            "id": "search_id",
                            "label": "",
                            "mandatory": false,
                            "contents": {
                                "type": "Button",
                                "subType": "Search",
                                "text": "Search",
                                "onClickAction": {
                                    "action": "Server",
                                    "fields": {
                                        "path": "searchByBooking",
                                        "params": {
                                            "surname":"suername_id",
                                            "pnr":"PNR_id"
                                        },
                                        "onSucessAction": {
                                            "action": "Navigation",
                                            "fields": {
                                                "path": "passenger_details",
                                                "params": {
                                                    "passengers": "responseData"
                                                }
                                            }
                                        },
                                        "onErrorAction": {
                                            "action": "NotificationAlert",
                                            "fields": {
                                                "params": {
                                                    "title": "error",
                                                    "message": "responseError"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    ]
                }
            ]
        }
    }
}
